<div class="flex flex-col gap-2 pt-4" x-data="{openDetailsId: ''}">
  {{ range .templates }}
  <div class="flex flex-col">
    <span class="bg-slate-500 p-2" @click="openDetailsId = openDetailsId === '{{ .ID }}' ? '' : '{{ .ID }}'">
      {{ .Title }}
    </span>
    <span class="bg-green-800 p-2" x-show="openDetailsId === '{{ .ID }}'">{{ .Description }}</span>
  </div>
  {{ end }}
</div>
