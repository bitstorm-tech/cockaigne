{
  "scripts": {
    "air": "air",
    "tailwind": "tailwindcss --watch -m -i ./tailwind.css -o ./static/app.css",
    "browser-sync": "browser-sync start --files 'views/**/*.html, ./**/*.css' --proxy 'localhost:3000' --port 3001",
    "dev": "concurrently \"bun:air\" \"bun:tailwind\"",
    "ncu": "ncu -u && bun i"
  },
  "devDependencies": {
    "autoprefixer": "10.4.17",
    "browser-sync": "3.0.2",
    "concurrently": "8.2.2",
    "daisyui": "4.6.2",
    "npm-check-updates": "16.14.15",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "tailwindcss": "3.4.1"
  }
}
